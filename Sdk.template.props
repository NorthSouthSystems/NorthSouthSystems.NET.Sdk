<Project>

    <PropertyGroup>
        <LangVersion>latest</LangVersion>
        <ImplicitUsings>disable</ImplicitUsings>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

        <!-- Repeatable Package restores -->
        <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
        <NuGetLockFilePath>packages.$(OS).lock.json</NuGetLockFilePath>

        <!-- SourceLink: https://devblogs.microsoft.com/dotnet/producing-packages-with-source-link/ -->
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>

        <!-- NuGet Symbols Package: https://learn.microsoft.com/en-us/nuget/create-packages/symbol-packages-snupkg -->
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>

        <!-- NuGet Best Practices: https://learn.microsoft.com/en-us/nuget/create-packages/package-authoring-best-practices -->
        <Authors>North South Systems, LLC</Authors>
        <Copyright>Copyright (c) 2024-2025 North South Systems, LLC</Copyright>
        <PackageIcon>Icon.png</PackageIcon>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <!-- Deterministic Builds -->
    <PropertyGroup Condition=" '$(GITHUB_ACTIONS)' == 'true' ">
        <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    </PropertyGroup>

    <ItemGroup>
        <Using Include="System" />
        <Using Include="System.Collections.Generic" />
        <Using Include="System.Linq" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\Icon.png" Pack="true" PackagePath="" />
        <None Include="..\LICENSE" Pack="true" PackagePath="" />
        <None Include="..\README.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="NorthSouthSystems.NET.Sdk" VersionOverride="NorthSouthSystems.NET.Sdk.Version">
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Nerdbank.GitVersioning" VersionOverride="3.7.115">
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
    </ItemGroup>

    <Choose>
        <When Condition=" $(MSBuildProjectName.EndsWith('.Benchmark')) Or $(MSBuildProjectName.EndsWith('.Benchmarks')) ">
            <PropertyGroup>
                <OutputType>Exe</OutputType>
                <IsPackable>false</IsPackable>
                <SonarQubeExclude>true</SonarQubeExclude>
            </PropertyGroup>

            <ItemGroup>
                <PackageReference Include="BenchmarkDotNet" VersionOverride="0.15.2" />
            </ItemGroup>

            <ItemGroup>
                <Using Include="BenchmarkDotNet.Attributes" />
            </ItemGroup>
        </When>

        <When Condition=" $(MSBuildProjectName.EndsWith('.Test')) Or $(MSBuildProjectName.EndsWith('.Tests')) ">
            <PropertyGroup>
                <IsPackable>false</IsPackable>
                <SonarQubeExclude>true</SonarQubeExclude>
            </PropertyGroup>

            <ItemGroup>
                <PackageReference Include="FluentAssertions" VersionOverride="[7.2.0,8.0.0)" />
                <PackageReference Include="Microsoft.NET.Test.Sdk" VersionOverride="17.14.1" />
                <PackageReference Include="xunit" VersionOverride="2.9.3" />
                <PackageReference Include="xunit.runner.visualstudio" VersionOverride="3.1.3">
                    <PrivateAssets>all</PrivateAssets>
                    <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
                </PackageReference>
            </ItemGroup>

            <ItemGroup>
                <Using Include="FluentAssertions" />
                <Using Include="Xunit" />
            </ItemGroup>
        </When>

        <Otherwise>
            <PropertyGroup>
                <Nullable>enable</Nullable>
            </PropertyGroup>

            <ItemGroup>
                <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" VersionOverride="9.0.0">
                    <PrivateAssets>all</PrivateAssets>
                    <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
                </PackageReference>
            </ItemGroup>

            <ItemGroup>
                <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
                    <_Parameter1>$(MSBuildProjectName).Benchmark</_Parameter1>
                </AssemblyAttribute>
                <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
                    <_Parameter1>$(MSBuildProjectName).Benchmarks</_Parameter1>
                </AssemblyAttribute>

                <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
                    <_Parameter1>$(MSBuildProjectName).Test</_Parameter1>
                </AssemblyAttribute>
                <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
                    <_Parameter1>$(MSBuildProjectName).Tests</_Parameter1>
                </AssemblyAttribute>
            </ItemGroup>
        </Otherwise>
    </Choose>

</Project>